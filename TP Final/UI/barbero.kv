<Ventana>
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        FloatLayout:
            size_hint: 1, 1
            id: vista
            canvas:
                Rectangle:
                    source: 'Fondo.png'
                    size: self.size
                    pos: self.pos
        BoxLayout:
            size_hint: 1, 0.2
            orientation: 'horizontal'
            padding: 5
            spacing: 5
            Button:
                text: 'Limpiar'
                on_press: app.limpiar()
            Button:
                text: 'Compilar'
                on_press: app.compilar()
            Button:
                text: 'Barbero'
                on_press: app.ejecutar('../TP/barbero')
            Button:
                text: 'Cliente'
                on_press: app.ejecutar('../TP/cliente')
            Button:
                text: 'Salir'
                on_press: app.salir()

<Proceso@Image>
    anim_delay: 0.07
