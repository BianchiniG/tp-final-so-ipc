<Ventana>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        FloatLayout:
            top: 0
            size: 500, 360
            size_hint: 1, 0.9
            id: vis
            canvas:
                Rectangle:
                    source: './Chars/Fondo.png'
                    size: self.size
                    pos: self.pos
                Line:
                    rectangle: self.x,self.y, self.width, self.height
        BoxLayout:
            size_hint: 1, 0.1
            orientation: 'horizontal'
            padding: 5
            spacing: 5
            Button:
                text: "Matar a todos"
                on_press: app.matar_a_todos()
            Button:
                text: "Compilar"
                on_press: app.compilar()
            Button:
                text: "Barbero"
                on_press: app.ejecutar('./c/barbero')
            Button:
                text: "Cliente"
                on_press: app.ejecutar('./c/cliente')

<Proceso@Image>
    anim_delay: 0.08
    size_hint: 1, 1
